<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EDED"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A9ADC3"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:padding="30dip"
            android:text="Data Visualiser for Newly Built Apartments"
            android:textColor="#F8F5F5"
            android:textSize="30sp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="30dip">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#112085"
                android:text="Visualise all "
                android:textAllCaps="false"
                android:textColor="#F8F5F5"
                android:typeface="serif" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#112085"
                android:text="Visualise region wise"
                android:textAllCaps="false"
                android:textColor="#F8F5F5"
                android:textColorHighlight="#331515"
                android:typeface="serif" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>