<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="30dip">

               <TextView
                   android:id="@+id/textViewPca"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="#A9ADC3"
                   android:text="Visualising the major components"
                   android:textSize="18sp"
                   android:typeface="normal" />

               <ImageView
                   android:id="@+id/imageView"
                   android:layout_width="350dp"
                   android:layout_height="210dp"
                   android:layout_weight="1"
                   android:scaleType="fitXY" />


               <ImageView
                   android:id="@+id/imageView1"
                   android:layout_width="wrap_content"
                   android:layout_height="210dp"
                   android:layout_weight="1"
                   android:scaleType="fitXY" />

               <ImageView
                   android:id="@+id/imageView2"
                   android:layout_width="wrap_content"
                   android:layout_height="210dp"
                   android:layout_weight="1"
                   android:scaleType="fitXY" />

               <TextView
                   android:id="@+id/textViewHeatMapRent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="#A9ADC3"
                   android:text="Distribution of rent for year 2014-2020"
                   android:textSize="18sp"
                   android:typeface="normal" />


               <Spinner
                   android:id="@+id/spinnerHeatMapRent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"/>

               <ImageView
                   android:id="@+id/imageViewHeatMapRent"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="50dp"
                   android:scaleType="fitXY" />


               <TextView
                   android:id="@+id/textViewHeatMapDwell"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="#A9ADC3"
                   android:text="Distribution of dwellings for year 2014-2020"
                   android:textSize="18sp"
                   android:typeface="normal" />
               <Spinner
                   android:id="@+id/spinnerHeatMapDwell"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"/>

               <ImageView
                   android:id="@+id/imageViewHeatMapDwell"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_marginTop="50dp"
                   android:scaleType="fitXY" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:orientation="vertical"
                   android:padding="30dip">

                   <Button
                       android:id="@+id/locBtn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:backgroundTint="#112085"
                       android:textColor="#F8F5F5"
                       android:typeface="serif"
                       android:text="Customise visualisation by regions"
                       android:textAllCaps="false" />

                   <Button
                       android:id="@+id/yearBtn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textAllCaps="false"
                       android:backgroundTint="#112085"
                       android:textColor="#F8F5F5"
                       android:typeface="serif"
                       android:text="Customise visualisation by year" />

                   <Button
                       android:id="@+id/devBtn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textAllCaps="false"
                       android:backgroundTint="#112085"
                       android:textColor="#F8F5F5"
                       android:typeface="serif"
                       android:text="Customise visualisation by developer" />

                   <Button
                       android:id="@+id/typeBtn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textAllCaps="false"
                       android:backgroundTint="#112085"
                       android:textColor="#F8F5F5"
                       android:typeface="serif"
                       android:text="Customise visualisation by apartment type" />


               </LinearLayout>


    </LinearLayout>
</ScrollView>